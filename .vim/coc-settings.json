{
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.sortImports.args": [
    "--multi-line=VERTICAL_HANGING_INDENT",
    "--trailing-comma",
    "--line-length=88"
  ],
  "python.linting.mypyArgs": [
    "--no-pretty",
    "--follow-imports=silent",
    "--show-column-numbers",
    "--check_untyped_defs"
  ]
}
